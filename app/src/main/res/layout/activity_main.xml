<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/background"
    android:background="@android:color/white">

    <TextView
        android:text="RCT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/abc_text_size_display_4_material"
        android:id="@+id/RCaT_text"
        android:textColor="#ffffb32c"
        android:layout_marginTop="49dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Real Coin Ticker"
        android:id="@+id/RCT_text"
        android:textColor="#ffffa82c"
        android:layout_alignBottom="@+id/RCaT_text"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Powered by"
        android:id="@+id/power_text"
        android:textSize="12dp"
        android:layout_marginBottom="17dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/evtian_Logo"
        android:layout_toStartOf="@+id/evtian_Logo" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/evtian_Logo"
        android:src="@mipmap/ic_evtianlogo"
        android:nestedScrollingEnabled="false"
        android:contentDescription="logo"
        android:maxHeight="50dp"
        android:minHeight="50dp"
        android:layout_toRightOf="@+id/RCaT_text"
        android:layout_toEndOf="@+id/RCaT_text"
        android:layout_alignParentBottom="true"
        android:paddingBottom="-3dp"
        android:paddingTop="0dp"
        android:paddingRight="-0dp"
        android:paddingLeft="0dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgBitcoin"
        android:src="@mipmap/ic_bitcoin"
        android:maxHeight="@android:dimen/app_icon_size"
        android:minHeight="100dp"
        android:minWidth="100dp"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/RCaT_text"
        android:layout_alignLeft="@+id/RCT_text"
        android:layout_alignStart="@+id/RCT_text" />

</RelativeLayout>
